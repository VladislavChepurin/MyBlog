@model MyBlog.ViewModels.UserPageViewModel;


@{
    ViewData["Title"] = "Страница пользователя";
}

<h3>@ViewData["Title"]</h3>

<div class="user-container">
    <div class="user-info-left">
        <h4>Данные пользователя</h4>

        <p>Имя: <code>@Model.UserViewModel?.User.FirstName</code><p />
        <p>Фамилия: <code>@Model.UserViewModel?.User.LastName</code><p />
        <p>Логин: <code>@Model.UserViewModel?.User.UserName</code><p />
        <p>Email: <code>@Model.UserViewModel?.User.Email</code><p />

        <form asp-controller="Edit" asp-action="EditUser" asp-route-userid="@Model.UserViewModel?.User.Id" method="post">
            <button type="submit" class="btn btn-logout">
                Редактировать
            </button>
        </form>
    </div>
</div>

<hr>

<div class="list-device">
    <h4>Страница блогов</h4>

    @if (@Model.UserViewModel?.AllArticles != null)
    {
        @foreach (var item in Model.UserViewModel.AllArticles)
        {
            <div class="card">
                <div class="card-header">
                    <div class="">
                        Дата создания: <code>@item.Created</code>
                    </div>
                    <div class="">
                        Дата редактирования: <code>@item.Updated</code>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>

                    <a class="btn btn-logout" asp-controller="Article" asp-action="Update" asp-route-id="@item.Id">Редактировать</a>

                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Удалить
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Внимание! После нажатия на кнопку "удалить" вы не сможете вернуть статью! Будьте очень внимательны!
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Не удалять</button>
                                    <form asp-controller="Article" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                        <button type="submit" class="btn btn-outline-danger">
                                            Удалить
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br>
        }
    }
</div>

