@model MyBlog.ViewModels.Tegs.AddTegViewModel

@{
    ViewData["Title"] = "Добавление тега";
}

<div class="block-reg background-white">
    <h3 class="center">@ViewData["Title"]</h3>

    <form class="frm" method="post" asp-controller="Teg" asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label for="name">Новый тег</label>
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
    <br>
    <a asp-controller="Teg" asp-action="Index">Перейти к списку всех тегов</a>
</div>
