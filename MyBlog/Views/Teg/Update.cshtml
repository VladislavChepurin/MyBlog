@model MyBlog.ViewModels.Tegs.TegUpdateViewModel

@{
    ViewData["Title"] = "Редактирование тега";
}

<div class="block-reg background-white">
    <h3 class="center">@ViewData["Title"]</h3>

    <form class="frm" method="post" asp-action="Update">       
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="mrgn">
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <br>
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </form>
    <br>
    <a asp-action="Index">Перейти к списку всех тегов</a>

</div>
